<!-- ExhibitDetailsPage.xaml -->
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ExhibitTreasury.UI.Pages"
    x:Class="ExhibitTreasury.UI.Pages.ExhibitDetailsPage"
    Title="{Binding Exhibit.Name}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
      Text="Редактировать"
      Order="Primary"
      Priority="0"
      Command="{Binding NavigateToEditExhibitCommand}" />
        <ToolbarItem
      Text="Переместить"
      Order="Primary"
      Priority="1"
      Command="{Binding NavigateToMoveExhibitCommand}" />
        <ToolbarItem
      Text="Выбрать фото"
      Order="Primary"
      Priority="2"
      Command="{Binding SelectImageCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout Padding="20">
            <Image
        Source="{Binding Exhibit.Id, Converter={StaticResource ExhibitImageConverter}}"
        Aspect="AspectFill"
        HeightRequest="200" />
            <Label Text="{Binding Exhibit.Name}" FontSize="Title" />
            <Label Text="{Binding Exhibit.Description}" />
        </StackLayout>
    </ScrollView>

</ContentPage>
