<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExhibitTreasury.UI.Pages.CreateExhibitPage"
    Title="Новый экспонат">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Название экспоната" />
        <Entry Text="{Binding Name}" Placeholder="Введите название" />

        <Label Text="Описание" />
        <Editor Text="{Binding Description}" HeightRequest="100" />

        <Button
      Text="Сохранить"
      Command="{Binding SaveCommand}"
      IsEnabled="{Binding IsValid}" />

        <Button
      Text="Отмена"
      Command="{Binding CancelCommand}"
      BackgroundColor="Transparent"
      TextColor="Gray" />
    </StackLayout>
</ContentPage>
