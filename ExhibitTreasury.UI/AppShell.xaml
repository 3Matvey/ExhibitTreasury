<!-- AppShell.xaml -->
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ExhibitTreasury.UI.Pages"
    x:Class="ExhibitTreasury.UI.AppShell">

    <ShellItem>
        <ShellContent ContentTemplate="{DataTemplate pages:HallsPage}" />
    </ShellItem>

    <!-- Зарегистрированные маршруты -->
    <ShellContent Route="CreateHallPage" ContentTemplate="{DataTemplate pages:CreateHallPage}" IsVisible="False" />
    <ShellContent Route="CreateExhibitPage" ContentTemplate="{DataTemplate pages:CreateExhibitPage}" IsVisible="False" />
    <ShellContent Route="EditExhibitPage" ContentTemplate="{DataTemplate pages:EditExhibitPage}" IsVisible="False" />
    <ShellContent Route="MoveExhibitPage" ContentTemplate="{DataTemplate pages:MoveExhibitPage}" IsVisible="False" />

</Shell>
